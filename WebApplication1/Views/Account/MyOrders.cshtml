@model IEnumerable<WebApplication1.Models.Order>

@{
    ViewBag.Title = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .order-history-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    .page-title {
        font-weight: 700;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #eee;
        color: #333;
    }

    /* Thẻ từng đơn hàng */
    .order-card {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        margin-bottom: 25px;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        overflow: hidden;
        transition: transform 0.2s;
    }

        .order-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    /* Phần đầu của thẻ (Màu xám nhẹ) */
    .order-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e0e0e0;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .order-id {
        font-weight: bold;
        color: #555;
    }

    .order-date {
        font-size: 0.9em;
        color: #777;
        margin-left: 10px;
    }

    /* Badge trạng thái */
    .status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85em;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }
    /* Vàng */
    .status-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    /* Xanh */

    /* Phần thân */
    .order-body {
        padding: 20px;
    }

    .customer-info p {
        margin-bottom: 5px;
        font-size: 0.95em;
        color: #555;
    }

    /* Danh sách sản phẩm */
    .product-list {
        margin-top: 15px;
        border-top: 1px dashed #ddd;
        padding-top: 15px;
    }

    .product-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        font-size: 0.95em;
    }

    /* Phần chân (Tổng tiền) */
    .order-footer {
        background-color: #fff;
        border-top: 1px solid #eee;
        padding: 15px 20px;
        text-align: right;
    }

    .total-price {
        font-size: 1.3em;
        font-weight: bold;
        color: #d9534f; /* Màu đỏ */
    }
</style>

<div class="order-history-container">
    <h2 class="page-title">Đơn hàng của tôi</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="glyphicon glyphicon-info-sign"></i> Bạn chưa có đơn hàng nào.
            <br />
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-sm mt-2">Mua sắm ngay</a>
        </div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="order-card">
                @* --- HEADER --- *@
                <div class="order-header">
                    <div>
                        <span class="order-id">#DH@(order.OrderID)</span>
                        <span class="order-date"><i class="glyphicon glyphicon-calendar"></i> @order.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>

                    @* Logic hiển thị màu trạng thái *@
                    @{
                        bool isPending = order.PaymentStatus.Contains("Chưa") || order.PaymentStatus.Contains("Chờ");
                        string statusClass = isPending ? "status-pending" : "status-success";
                    }
                    <span class="status-badge @statusClass">
                        @order.PaymentStatus
                    </span>
                </div>

                @* --- BODY --- *@
                <div class="order-body">
                    <div class="customer-info">
                        <p><strong><i class="glyphicon glyphicon-map-marker"></i> Địa chỉ giao:</strong> @order.AddressDelivery</p>

                        @if (order.Customer != null)
                        {
                            <p><strong><i class="glyphicon glyphicon-envelope"></i> Email:</strong> @order.Customer.CustomerEmail</p>
                            <p><strong><i class="glyphicon glyphicon-phone"></i> SĐT:</strong> @order.Customer.CustomerPhone</p>
                        }
                    </div>

                    <div class="product-list">
                        @foreach (var detail in order.OrderDetails)
                        {
                            <div class="product-item">
                                <span>
                                    <strong>@detail.Product.ProductName</strong>
                                    <span class="text-muted">x @detail.Quantity</span>
                                </span>
                                <span>@String.Format("{0:N0} đ", detail.Quantity * detail.UnitPrice)</span>
                            </div>
                        }
                    </div>
                </div>

                @* --- FOOTER --- *@
                <div class="order-footer">
                    <span>Tổng thành tiền:</span>
                    <span class="total-price">@String.Format("{0:N0} đ", order.TotalAmount)</span>
                </div>
            </div>
        }
    }

    <div style="text-align: center; margin-top: 40px;">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
            &laquo; Quay lại trang chủ
        </a>
    </div>
</div>