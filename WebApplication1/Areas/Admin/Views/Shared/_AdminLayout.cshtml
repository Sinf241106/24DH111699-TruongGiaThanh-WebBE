<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trang Quản Trị</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Đặt nền tối và màu chữ sáng cho toàn bộ trang */
        body {
            background-color: #212529; /* Màu nền tối */
            color: #ccc; /* Màu chữ sáng */
        }

        /* Thẻ bọc chính dùng Flexbox */
        .admin-container {
            display: flex;
            /* Đặt chiều cao tối thiểu để footer luôn ở dưới */
            min-height: calc(100vh - 120px); /* 100% chiều cao trừ đi nav và footer */
        }

        /* CỘT 1: SIDEBAR (Menu trái) */
        .admin-sidebar {
            /* "Làm nó nhỏ lại" -> Đặt chiều rộng cố định */
            flex-basis: 230px;
            flex-shrink: 0; /* Không bị co lại */

            padding: 20px;
            background-color: #2a2a2a; /* Nền sidebar hơi khác một chút */
            border-right: 1px solid #333; /* Đường kẻ ngăn cách */
        }

        /* CỘT 2: NỘI DUNG CHÍNH (Bảng sách, v.v.) */
        .admin-content {
            /* Tự động lấp đầy phần còn lại */
            flex-grow: 1;
            padding: 20px;
            /* Đây là phần sẽ chứa nội dung bảng Sách của bạn */
        }

        /* --- Style cho Menu --- */
        .admin-sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .admin-sidebar li a {
            display: block;
            padding: 12px 15px;
            color: #ccc;
            text-decoration: none;
            border-radius: 4px;
            margin-bottom: 5px;
        }

            .admin-sidebar li a:hover {
                background-color: #333;
                color: #fff;
            }

        /* --- Tùy chỉnh Navbar và Footer --- */
        .admin-navbar {
            border-bottom: 1px solid #333;
        }

        .admin-footer {
            background-color: #1a1a1a;
            color: #888;
            border-top: 1px solid #333;
            padding: 20px 0;
            text-align: center;
        }

        /* Chỉnh màu link xanh lá */
        .link-green {
            color: #20c997 !important;
            text-decoration: none;
        }

            .link-green:hover {
                color: #1baa80 !important;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark admin-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">My Store</a>
            <span class="navbar-text">
                <a href="/" target="_blank" class="link-green">[Xem trang bán hàng]</a>
            </span>
        </div>
    </nav>

    <div class="admin-container">

        <div class="admin-sidebar">
            <ul>
                @* --- DÒNG "Home" ĐÃ BỊ XÓA --- *@
                <li><a href="@Url.Action("Index", "Categories")">Danh mục</a></li>
                <li><a href="@Url.Action("Index", "Products")">Sản phẩm</a></li>
                @* --- DÒNG "Khách hàng" ĐÃ BỊ XÓA --- *@
                <li><a href="#">Đơn hàng (Chưa có)</a></li>
                <li><a href="#">Tài khoản (Chưa có)</a></li>
            </ul>
        </div>

        <div class="admin-content">
            @RenderBody()
        </div>

    </div>

    <footer class="admin-footer">
        <div class="container">
            © 2025 - Tên ứng dụng
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>