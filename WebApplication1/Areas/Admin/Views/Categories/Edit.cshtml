@model WebApplication1.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success" style="padding:10px">CẬP NHẬT DANH MỤC</h2>

@* --- SỬ DỤNG FORM RAZOR VỚI MULTIPART/FORM-DATA VÀ GỬI ID --- *@
@using (Html.BeginForm("Edit", "Categories", new { id = Model.CategoryID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* Trường ẩn này rất quan trọng để Controller biết đang cập nhật bản ghi nào *@
        @Html.HiddenFor(model => model.CategoryID)

        @* ---------------------------------------------------- *@
        @* PHẦN NỘI DUNG FORM (Partial View) *@
        @* ---------------------------------------------------- *@

        @* Tên danh mục *@
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, "Tên danh mục", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        @* Ô NHẬP FILE ẢNH MỚI *@
        <div class="form-group">
            <label class="control-label col-md-2" for="ImageFile">Ảnh danh mục</label>
            <div class="col-md-10">
                <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
            </div>
        </div>

        @* HIỂN THỊ ẢNH CŨ VÀ TRƯỜNG ẨN (QUAN TRỌNG ĐỂ GIỮ DỮ LIỆU CŨ) *@
        @if (Model != null && !string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="form-group">
                <label class="control-label col-md-2">Ảnh hiện tại</label>
                <div class="col-md-10">
                    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.CategoryName" style="width: 150px; margin-top: 10px;" />

                    @* TRƯỜNG ẨN NÀY LƯU ĐƯỜNG DẪN CŨ VÀO FORM. NẾU KHÔNG CÓ FILE MỚI, CONTROLLER DÙNG GIÁ TRỊ NÀY. *@
                    @Html.HiddenFor(model => model.ImageUrl)
                </div>
            </div>
        }
        @* ---------------------------------------------------- *@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}