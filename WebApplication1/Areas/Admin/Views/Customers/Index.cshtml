@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .header-box {
        background-color: #198754; /* Xanh lá */
        color: white;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
        display: flex;
        justify-content: center; /* Căn giữa tiêu đề vì không còn nút nữa */
        align-items: center;
    }

    .table-dark-custom {
        background-color: #2c3034;
        color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

        .table-dark-custom th {
            background-color: #212529;
            border-bottom: 2px solid #444;
        }

        .table-dark-custom td {
            border-bottom: 1px solid #444;
            vertical-align: middle;
        }
</style>

<div class="header-box">
    @* --- ĐÃ ĐỔI TÊN TIÊU ĐỀ --- *@
    <h3 style="margin:0; text-transform: uppercase; font-weight: bold;">
        QUẢN LÝ NGƯỜI DÙNG
    </h3>

    @* (ĐÃ XÓA NÚT MÀU VÀNG Ở ĐÂY) *@
</div>

<div class="table-responsive">
    <table class="table table-dark-custom table-hover">
        <thead>
            <tr>
                <th>Tài khoản (MSSV)</th>
                <th>Họ và Tên</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><span class="badge bg-info text-dark">@item.Username</span></td>
                    <td style="font-weight:bold; color:#ffc107;">@item.CustomerName</td>
                    <td>@item.CustomerPhone</td>
                    <td>@item.CustomerEmail</td>
                    <td>@item.CustomerAddress</td>
                </tr>
            }
        </tbody>
    </table>
</div>