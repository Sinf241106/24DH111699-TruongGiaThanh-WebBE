@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewBag.Title = "Danh sách Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success" style="padding:10px">DANH SÁCH SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr class="bg-success">
        <th>
            HÌNH ẢNH
        </th>
        <th>
            TÊN SẢN PHẨM
        </th>
        <th>
            GIÁ TIỀN
        </th>
        @* --- ĐÃ XÓA CỘT DANH MỤC Ở ĐÂY --- *@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ProductImage))
                {
                    <img src="@Url.Content(item.ProductImage)" alt="@item.ProductName" style="width: 100px; object-fit: cover;" />
                }
                else
                {
                    <span>(Không có ảnh)</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @String.Format("{0:N0} đ", item.ProductPrice)
            </td>
            @* --- ĐÃ XÓA CỘT DANH MỤC Ở ĐÂY --- *@
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-info btn-sm" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>