<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SinfStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @* --- THÊM DÒNG NÀY ĐỂ HIỂN THỊ ICON --- *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    @* --- CSS TÙY CHỈNH --- *@
    <style>
        body {
            padding-top: 0 !important;
        }

        /* CSS cho thanh xanh lá */
        .top-bar-wrapper {
            background-color: #28a745;
            color: white;
            font-size: 0.9em;
            text-align: center;
            padding: 15px 0;
        }

        /* CSS cho thanh đen */
        .navbar.bg-dark {
            background-color: #343a40 !important;
        }

        /* TĂNG CHIỀU CAO THANH NAV ĐEN (bự hơn) */
        .navbar .navbar-brand,
        .navbar .nav-link {
            padding-top: 1.1rem;
            padding-bottom: 1.1rem;
        }

        /* Căn lề phải cho menu */
        .navbar-collapse {
            justify-content: space-between;
        }

        .body-content {
            padding-top: 15px;
            padding-bottom: 15px;
        }

        /* CSS Cho menu dropdown */
        .dropdown-menu {
            background-color: #343a40;
            border: 1px solid rgba(255,255,255,0.15);
        }

        .dropdown-item {
            color: #ccc;
        }

            .dropdown-item:hover {
                color: #fff;
                background-color: #495057;
            }
    </style>
</head>
<body>

    @* --- HEADER (ĐÃ ĐƯỢC ĐƯA RA NGOÀI CONTAINER) --- *@
    <div>
        @* --- THANH XANH LÁ (Nền full-width) --- *@
        <div class="top-bar-wrapper">
            <div class="container">
                @* Nội dung bên trong co lại *@
                Free ship đơn từ 40k, giảm nhiều hơn cùng FREESHIP XTRA
            </div>
        </div>

        @* --- NAV CHÍNH (Nền full-width) --- *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container">
                @* Nội dung bên trong co lại *@
                @Html.ActionLink("SinfStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex">

                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Tất cả sản phẩm", "Index", "Products", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>

                    @* --- LOGIC ĐĂNG NHẬP / ĐĂNG XUẤT (DÙNG SESSION) --- *@
                    <ul class="navbar-nav">
                        <li>@Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                        @if (Session["Username"] != null)
                        {
                            // NẾU ĐÃ ĐĂNG NHẬP:
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAccount" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @* Hiển thị tên (lấy từ Session) *@
                                    Xin chào, @Session["FullName"].ToString()!
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownAccount">
                                    <li>
                                        @Html.ActionLink("Đăng xuất", "LogOut", "Account", new { area = "" }, new { @class = "dropdown-item" })
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            // NẾU CHƯA ĐĂNG NHẬP:
                            <li class="nav-item">
                                @Html.ActionLink("Tài khoản", "Index", "Account", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }

                        <li>@Html.ActionLink("Giỏ hàng", "Index", "ShoppingCart", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    @* --- HẾT HEADER --- *@


    @* --- BỌC PHẦN NỘI DUNG TRONG CONTAINER (ĐỂ "THU VÀO") --- *@
    <div class="container">
        <div class="body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SinfStore Application</p>
            </footer>
        </div>
    </div>
    @* --- HẾT .container CHÍNH --- *@


    @Scripts.Render("~/bundles/jquery")

    @* --- (ĐÃ SỬA) TẢI TRỰC TIẾP JAVASCRIPT CỦA BOOTSTRAP 5 --- *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @* (Đã xóa dòng @Scripts.Render("~/bundles/bootstrap") cũ) *@

    @RenderSection("scripts", required: false)
</body>
</html>