<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trang Quản Trị</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212529;
            color: #ccc;
        }

        .admin-container {
            display: flex;
            min-height: calc(100vh - 120px);
        }

        .admin-sidebar {
            flex-basis: 230px;
            flex-shrink: 0;
            padding: 20px;
            background-color: #2a2a2a;
            border-right: 1px solid #333;
        }

        .admin-content {
            flex-grow: 1;
            padding: 20px;
        }

        .admin-sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .admin-sidebar li a {
            display: block;
            padding: 12px 15px;
            color: #ccc;
            text-decoration: none;
            border-radius: 4px;
            margin-bottom: 5px;
        }

            .admin-sidebar li a:hover {
                background-color: #333;
                color: #fff;
            }

        .admin-navbar {
            border-bottom: 1px solid #333;
        }

        .admin-footer {
            background-color: #1a1a1a;
            color: #888;
            border-top: 1px solid #333;
            padding: 20px 0;
            text-align: center;
        }

        .link-green {
            color: #20c997 !important;
            text-decoration: none;
        }

            .link-green:hover {
                color: #1baa80 !important;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark admin-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">My Store Admin</a>
            <span class="navbar-text">
                <a href="/" target="_blank" class="link-green">[Xem trang bán hàng]</a>
            </span>
        </div>
    </nav>

    <div class="admin-container">
        <div class="admin-sidebar">
            <ul>
                <li><a href="@Url.Action("Index", "Categories")">Danh mục</a></li>
                <li><a href="@Url.Action("Index", "Products")">Sản phẩm</a></li>

                @* --- ĐÃ XÓA DÒNG "ĐƠN HÀNG" --- *@

                @* --- (QUAN TRỌNG) ĐÃ SỬA LINK KHÁCH HÀNG TẠI ĐÂY --- *@
                <li><a href="@Url.Action("Index", "Customers")">Khách hàng</a></li>
            </ul>
        </div>

        <div class="admin-content">
            @RenderBody()
        </div>
    </div>

    <footer class="admin-footer">
        <div class="container">
            © 2025 - SinfStore Application
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>