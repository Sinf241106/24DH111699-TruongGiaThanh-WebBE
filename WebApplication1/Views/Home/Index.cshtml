@using PagedList.Mvc
@model PagedList.IPagedList<WebApplication1.Models.Product>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listNewProducts = ViewBag.NewProducts as List<WebApplication1.Models.Product>;

    // --- LOGIC MỚI: KIỂM TRA XEM CÓ ĐANG TÌM KIẾM KHÔNG? ---
    // Nếu có từ khóa HOẶC có chọn giá -> isSearching = true
    bool isSearching = !String.IsNullOrEmpty(ViewBag.CurrentSearchString)
                       || ViewBag.CurrentMinPrice != null
                       || ViewBag.CurrentMaxPrice != null;
}

<style>
    /* --- CSS GIỮ NGUYÊN NHƯ CŨ --- */
    .hero-banner {
        position: relative;
        background-image: url('https://images.unsplash.com/photo-1505686994434-e33f7ab23e8f');
        background-size: cover;
        background-position: center;
        height: 350px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        margin-bottom: 30px;
    }

        .hero-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.4);
            border-radius: 8px;
        }

    .hero-content {
        position: relative;
        z-index: 1;
    }

        .hero-content h1 {
            font-size: 2.5em;
            font-weight: 700;
        }

        .hero-content .btn-start {
            background-color: #ffc107;
            color: #333;
            font-weight: 600;
            padding: 10px 25px;
            border-radius: 50px;
            text-decoration: none;
        }

    .search-bar-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        border: 1px solid #eee;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    /* Scrollbar */
    .scrolling-wrapper {
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
        gap: 20px;
        padding-bottom: 20px;
        -webkit-overflow-scrolling: touch;
    }

        .scrolling-wrapper::-webkit-scrollbar {
            height: 6px;
        }

        .scrolling-wrapper::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .scrolling-wrapper::-webkit-scrollbar-thumb {
            background: #ccc;
            border-radius: 10px;
        }

            .scrolling-wrapper::-webkit-scrollbar-thumb:hover {
                background: #888;
            }

    /* Product Card */
    .product-card {
        flex: 0 0 auto;
        width: 260px;
    }

        .product-card .thumbnail {
            height: 400px;
            border: 1px solid #eee;
            border-radius: 8px;
            padding: 10px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background: #fff;
        }

            .product-card .thumbnail:hover {
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                transform: translateY(-3px);
                transition: all 0.3s ease;
            }

        .product-card img {
            width: 100%;
            height: 180px;
            object-fit: contain;
            margin-bottom: 10px;
        }

        .product-card h4 {
            height: 40px;
            overflow: hidden;
            font-size: 1.1em;
            font-weight: 600;
            margin: 10px 0;
        }

        .product-card .price {
            font-size: 1.3em;
            color: #d9534f;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .product-card a {
            text-decoration: none;
            color: #333;
        }

    .section-title {
        font-weight: bold;
        margin-bottom: 20px;
        border-left: 5px solid #28a745;
        padding-left: 15px;
        margin-top: 20px;
    }

    .pagination-container {
        text-align: center;
        margin-top: 40px;
        margin-bottom: 60px;
    }
</style>

@* --- 1. BANNER --- *@
<div class="hero-banner">
    <div class="hero-content">
        <h1>SinfStore - Mua sắm thả ga</h1>
        <br>
        <a href="#main-content" class="btn-start">Khám phá ngay</a>
    </div>
</div>

@* --- 2. THANH TÌM KIẾM --- *@
<div class="search-bar-container" id="main-content">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "row g-3" }))
    {
        <div class="row">
            <div class="col-md-4"><input type="text" name="searchString" class="form-control" placeholder="Nhập tên..." value="@ViewBag.CurrentSearchString"></div>
            <div class="col-md-3"><input type="number" name="minPrice" class="form-control" placeholder="Giá thấp nhất" value="@ViewBag.CurrentMinPrice"></div>
            <div class="col-md-3"><input type="number" name="maxPrice" class="form-control" placeholder="Giá cao nhất" value="@ViewBag.CurrentMaxPrice"></div>
            <div class="col-md-2"><button type="submit" class="btn btn-primary w-100" style="width: 100%">Tìm kiếm</button></div>
        </div>
    }
</div>

@* ================================================= *@
@* KHUNG 1: SẢN PHẨM MỚI (TOP 10) *@
@* LOGIC: CHỈ HIỆN KHI KHÔNG TÌM KIẾM (!isSearching) *@
@* ================================================= *@

@if (!isSearching)
{
    <div id="new-arrivals">
        <h3 class="section-title">✨ Sản phẩm mới về (Top 10)</h3>
        @if (listNewProducts != null && listNewProducts.Count > 0)
        {
            <div class="scrolling-wrapper">
                @foreach (var item in listNewProducts)
                {
                    <div class="product-card">
                        <div class="thumbnail">
                            <a href="@Url.Action("Details", "Home", new { id = item.ProductID })">
                                <img src="@Url.Content(item.ProductImage ?? "https://via.placeholder.com/200")">
                            </a>
                            <div class="caption">
                                <h4><a href="@Url.Action("Details", "Home", new { id = item.ProductID })">@item.ProductName</a></h4>
                                <p class="price">@string.Format("{0:N0} đ", item.ProductPrice)</p>
                                <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = item.ProductID })" class="btn btn-primary w-100">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted" style="padding-left: 15px">Chưa có sản phẩm mới nào.</p>
        }
    </div>

    <hr style="margin: 40px 0; border-top: 2px solid #eee;">
}


@* ================================================= *@
@* KHUNG 2: KẾT QUẢ TÌM KIẾM / TẤT CẢ SẢN PHẨM *@
@* ================================================= *@
<div id="all-products">

    @* Đổi tên tiêu đề dựa trên việc có tìm kiếm hay không *@
    <h3 class="section-title">
        @(isSearching ? "Kết quả tìm kiếm" : "Tất cả sản phẩm")
    </h3>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">
            Không tìm thấy sản phẩm nào phù hợp với từ khóa "@ViewBag.CurrentSearchString".
            <br>
            <a href="@Url.Action("Index", "Home")" class="alert-link">Quay lại trang chủ</a>
        </div>
    }
    else
    {
        <div class="scrolling-wrapper">
            @foreach (var item in Model)
            {
                <div class="product-card">
                    <div class="thumbnail">
                        <a href="@Url.Action("Details", "Home", new { id = item.ProductID })">
                            <img src="@Url.Content(item.ProductImage ?? "https://via.placeholder.com/200")">
                        </a>
                        <div class="caption">
                            <h4><a href="@Url.Action("Details", "Home", new { id = item.ProductID })">@item.ProductName</a></h4>
                            <p class="price">@string.Format("{0:N0} đ", item.ProductPrice)</p>
                            <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = item.ProductID })" class="btn btn-primary w-100">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* PHÂN TRANG NẰM CUỐI CÙNG *@
        <div class="pagination-container">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount <br />
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.CurrentSearchString, minPrice = ViewBag.CurrentMinPrice, maxPrice = ViewBag.CurrentMaxPrice }))
        </div>
    }
</div>

@Styles.Render("~/Content/PagedList.css")