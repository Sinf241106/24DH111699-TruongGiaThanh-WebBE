@model IEnumerable<WebApplication1.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success" style="padding:10px">DANH SÁCH DANH MỤC</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr class="bg-success">
        <th>
            TÊN DANH MỤC
        </th>

        @* --- CODE MỚI THÊM (Tiêu đề cột) --- *@
        <th>
            ẢNH
        </th>
        @* --- HẾT CODE MỚI --- *@

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>

            @* --- CODE MỚI THÊM (Nội dung cột) --- *@
            <td>
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@Url.Content(item.ImageUrl)" alt="@item.CategoryName" style="width: 100px; object-fit: cover;" />
                }
                else
                {
                    <span>(Không có ảnh)</span>
                }
            </td>
            @* --- HẾT CODE MỚI --- *@

            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-info btn-sm" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger btn-sm" })
            </td>
            @* Debug column: show stored ImageUrl *@
            <th>ImageUrl (debug)</th>

            @* inside foreach row *@
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
        </tr>

    }
</table>    