@model IEnumerable<WebApplication1.Models.Order>

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-success text-uppercase border-bottom border-success pb-2">
        <i class="fas fa-shopping-cart"></i> Quản lý Đơn hàng
    </h2>
    <button class="btn btn-outline-secondary btn-sm" onclick="location.reload()">
        <i class="fas fa-sync-alt"></i> Làm mới
    </button>
</div>

@* --- HIỆN THÔNG BÁO NẾU CÓ --- *@
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered align-middle">
        <thead class="table-secondary text-dark">
            <tr>
                <th>Mã ĐH</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Địa chỉ</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@item.OrderID</td>
                    <td>@(item.Customer != null ? item.Customer.CustomerName : "Khách vãng lai")</td>
                    <td>@item.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td class="text-danger fw-bold">@string.Format("{0:N0} đ", item.TotalAmount)</td>
                    <td style="max-width: 200px; font-size: 0.9em;">@item.AddressDelivery</td>

                    @* --- CỘT TRẠNG THÁI (MÀU SẮC) --- *@
                    <td class="text-center">
                        @if (item.PaymentStatus == "Đã thanh toán")
                        {
                            <span class="badge bg-success">Đã thanh toán</span>
                        }
                        else if (item.PaymentStatus.Contains("Chờ") || item.PaymentStatus.Contains("Chưa"))
                        {
                            <span class="badge bg-warning text-dark">@item.PaymentStatus</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@item.PaymentStatus</span>
                        }
                    </td>

                    @* --- CỘT HÀNH ĐỘNG (CÓ NÚT XÁC NHẬN) --- *@
                    <td class="text-center" style="white-space: nowrap;">
                        <div class="btn-group btn-group-sm">
                            @* Nút Xem *@
                            <a href="@Url.Action("Details", new { id = item.OrderID })" class="btn btn-info" title="Xem chi tiết">
                                <i class="fas fa-eye"></i> Xem
                            </a>

                            @* --- NÚT XÁC NHẬN THANH TOÁN (CHỈ HIỆN KHI CHƯA THANH TOÁN) --- *@
                            @if (item.PaymentStatus != "Đã thanh toán")
                            {
                                // Dùng Form để gửi lệnh POST bảo mật
                                using (Html.BeginForm("MarkAsPaid", "Orders", new { id = item.OrderID }, FormMethod.Post, new { style = "display:inline; margin-left: 5px;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success" title="Xác nhận đã thanh toán" onclick="return confirm('Xác nhận đơn hàng #@item.OrderID đã thanh toán?');">
                                        <i class="fas fa-check"></i> Xong
                                    </button>
                                }
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>