@* --- (QUAN TRỌNG) SỬA DÒNG NÀY ĐỂ NHẬN HomeViewModel --- *@
@model WebApplication1.Models.HomeViewModel

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* --- CSS (Giữ nguyên) --- *@
<style>
    /* --- CSS CỦA HERO BANNER --- */
    .hero-banner {
        position: relative;
        background-image: url('https://images.unsplash.com/photo-1505686994434-e33f7ab23e8f');
        background-size: cover;
        background-position: center;
        height: 400px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        margin-bottom: 25px;
    }

        .hero-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.4);
            border-radius: 8px;
        }

    .hero-content {
        position: relative;
        z-index: 1;
    }

        .hero-content h1 {
            font-size: 2.8em;
            font-weight: 700;
        }

        .hero-content p {
            font-size: 1.2em;
            margin-bottom: 25px;
        }

        .hero-content .btn-start-shopping {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #333;
            font-weight: 600;
            padding: 12px 25px;
            font-size: 1.1em;
            border-radius: 50px;
            text-decoration: none;
        }

            .hero-content .btn-start-shopping:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }
    /* --- HẾT CSS BANNER --- */

    /* --- CSS CHO THANH CUỘN NGANG SẢN PHẨM --- */
    .horizontal-scroll-wrapper {
        width: 100%;
        overflow-x: auto; /* Tạo thanh cuộn ngang */
        overflow-y: hidden;
        padding: 15px 0;
    }

    .items-container {
        white-space: nowrap; /* Giữ các item trên 1 hàng */
    }

    .product-card-inline {
        display: inline-block; /* Xếp các card ngang nhau */
        width: 280px; /* Chiều rộng cố định cho mỗi card */
        white-space: normal; /* Cho nội dung bên trong xuống dòng */
        vertical-align: top;
        margin-right: 15px; /* Khoảng cách giữa các card */
    }

        .product-card-inline .thumbnail {
            height: 400px; /* Giữ chiều cao đồng đều */
            margin-bottom: 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 10px;
            text-align: center;
        }

            /* --- (MỚI) XÓA GẠCH CHÂN CÁC LINK SẢN PHẨM --- */
            .product-card-inline .thumbnail a {
                text-decoration: none;
            }

                .product-card-inline .thumbnail a:hover {
                    text-decoration: none;
                }
    /* --- HẾT CSS MỚI --- */

</style>
@* --- HẾT CSS --- *@


@* --- HERO BANNER (Giữ nguyên) --- *@
<div class="hero-banner">
    <div class="hero-content">
        <h1>Chào mừng đến trang SinfStore</h1>
        <p>Mua sắm trực tuyến với hàng ngàn sản phẩm đa dạng và chất lượng</p>
        <a href="@Url.Action("Index", "Home")#product-list" class="btn btn-start-shopping">Bắt đầu mua sắm</a>
    </div>
</div>
@* --- HẾT HERO BANNER --- *@


@* --- HÀNG SẢN PHẨM 1: NỔI BẬT --- *@
<h3 id="product-list">Sản phẩm nổi bật</h3>
<div class="horizontal-scroll-wrapper">
    <div class="items-container">
        @foreach (var item in Model.FeaturedProducts)
        {
            <div class="product-card-inline">
                <div class="thumbnail">
                    <a href="@Url.Action("Details", "Home", new { id = item.ProductID })">
                        @if (!string.IsNullOrEmpty(item.ProductImage))
                        {
                            <img src="@Url.Content(item.ProductImage)" alt="@item.ProductName" style="width: 100%; height: 200px; object-fit: contain;">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/200x200.png?text=No+Image" alt="No Image" style="width: 100%; height: 200px; object-fit: contain;">
                        }
                    </a>
                    <div class="caption">
                        <h4 style="height: 40px; overflow: hidden; font-weight: bold;">
                            <a href="@Url.Action("Details", "Home", new { id = item.ProductID })">@item.ProductName</a>
                        </h4>
                        <p style="font-size: 1.3em; color: #c00;">
                            <strong>@string.Format("{0:N0}", item.ProductPrice) đ</strong>
                        </p>
                        <p>
                            <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = item.ProductID })" class="btn btn-primary" role="button">Thêm vào giỏ</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@* --- HẾT HÀNG SẢN PHẨM 1 --- *@


@* --- HÀNG SẢN PHẨM 2: MỚI NHẤT --- *@
